<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed? %>
    <p>This task is <strong>complete</strong></p>
<% else %>
    <p>This task has <strong>not been completed</strong> yet</p>
<% end %>

<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit this task", edit_task_path %></p>
